<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageSingleLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageProfileLayout"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignTop="@+id/messageTextLayout"
        android:layout_marginStart="0dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/messageTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeTextLayout"
        android:background="@drawable/message_type_background"
        android:layout_toEndOf="@id/messageProfileLayout"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:text="TextView"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/timeTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5dp"
        android:text="00:00" />

    <TextView
        android:id="@+id/nameTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageProfileLayout"
        android:layout_alignParentStart="true"
        android:text="Display Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"/>

    <ImageView
        android:id="@+id/messageImageLayout"
        android:src="@drawable/profile"
        android:layout_alignStart="@id/messageProfileLayout"
        android:layout_marginStart="72dp"
        android:layout_below="@id/timeTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="300dp"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"/>


</RelativeLayout>